{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "String",
      "minLength": 1
    },
    "siteName": {
      "type": "String",
      "minLength": 1
    },
    "SQL Server/DB Password": {
      "type": "String",
      "minLength": 1
    },
	"repoURL": {
      "type": "string",
      "defaultValue": "https://github.com/raje678/PrivateLabelLite.git",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
	"applicationId": {
      "type": "string",
      "metadata": {
        "description": "This is the application Id value."
      },
	  "minLength": 1
    },
	 "applicationPasscode": {
      "type": "String",
      "metadata": {
        "description": "This is the slot for the Application Passcode"
      },
	  "minLength": 1
    },
	//"storageURL": {
     // "type": "string",
     // "defaultValue": "https://github.com/raje678/PrivateLabelLite/tree/master/Scripts/pwadb.bacpac",
     // "metadata": {
     //   "description": "The URL for the GitHub repository that contains the project to deploy."
     // }
    //},
    "branch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    }
  }
}
